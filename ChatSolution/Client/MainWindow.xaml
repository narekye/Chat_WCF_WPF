<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"

        Title="Chat_Sample" Height="305.949" Width="525" ResizeMode="NoResize" Activated="MainWindow_OnActivated"  >
    <Window.Background>
        <ImageBrush x:Name="img" ImageSource="C:\Users\ha.harutyunyan\Source\Repos\Chat_WCF_WPF\ChatSolution\Client\Images\Image1.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
          
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock x:Name="res"  Height="200" Background="White" Margin="5 5 5 5" VerticalAlignment="Top"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="message" Height="20" Background="{x:Null}" Margin="5" Foreground="Chartreuse" Width="196" ></TextBox>

                <Button Content="Send" Margin="5" Click="Send_Message" Width="61"></Button>
            </StackPanel>
           <TextBlock x:Name="Label" Background="{x:Null}" Height="21" Margin="5,0,10,0" FontFamily="Script MT Bold" Foreground="White"/>

        </StackPanel>
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Button Content="Sign In" Margin="5" Click="Form_of_Show" Width="51"></Button>
                <Button Content="Sign Out" Margin="5" Click="Form_of_Show" Width="78"></Button>
                <Button Content="Registration" Margin="5" Click="Form_of_Show" Width="78"></Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
